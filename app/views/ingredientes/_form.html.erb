<%= form_for @ingrediente, :html => { :class => "form-horizontal ingrediente" } do |f| %>

  <% if @ingrediente.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ingrediente.errors.count, "error") %> prohibited this ingrediente from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ingrediente.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :ing_nombre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ing_nombre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ing_nombre) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ingredientes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
