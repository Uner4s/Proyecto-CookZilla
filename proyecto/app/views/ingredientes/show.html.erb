<%- model_class = Ingrediente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ing_nombre) %>:</strong></dt>
  <dd><%= @ingrediente.ing_nombre %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.Atras")),
              ingredientes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_ingrediente_path(@ingrediente), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.eliminar")),
              ingrediente_path(@ingrediente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Esta seguro que desea eliminar el ingrediente?')) },
              :class => 'btn btn-danger' %>
